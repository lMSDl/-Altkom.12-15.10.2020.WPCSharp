<Window x:Class="ArchitecturalPatterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchitecturalPatterns"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel VerticalAlignment="Center">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
                <ToggleButton x:Name="ToggleButton_MVC"
                              Click="ToggleButton_MVC_Click"
                              Content="MVC"/>
                <ToggleButton x:Name="ToggleButton_MVP"
                              Click="ToggleButton_MVP_Click"
                              Content="MVP"/>
                <ToggleButton x:Name="ToggleButton_MVVM"
                              Click="ToggleButton_MVVM_Click"
                              Content="MVVM"/>
            </StackPanel>
            <Frame DockPanel.Dock="Bottom"
                   NavigationUIVisibility="Hidden"
                   x:Name="Frame_Main"
                   />


        </DockPanel>
    </Grid>
</Window>
